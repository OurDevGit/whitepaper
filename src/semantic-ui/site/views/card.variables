/*******************************
    User Variable Overrides
*******************************/

@borderRadius: 8px;
@contentFontSize: 16px;
@boxShadow: 4px 8px 24px rgba(179, 179, 179, 0.06), 12px 8px 16px rgba(228, 228, 228, 0.2);

/* Header */
@headerFontSize: 20px;
@headerColor: #3D454D;

/* Metadata */
@metaFontSize: @relativeMedium;
@metaSpacing: 0.3em;
@metaColor: @lightTextColor;

/* Description */
@descriptionColor: #5f5f5f;
